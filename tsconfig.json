{
    "compilerOptions": {
        "outDir": "lib",
        "module": "ESNext",
        "target": "ES6",
        "lib": [
            "ES6",
            "DOM",
            "ES2016",
            "ES2020"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}